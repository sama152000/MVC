@model List<CartItem>

<h2>🛒 Shopping Cart</h2>

@if (!Model.Any())
{
    <p>The cart is empty.</p>
}
else
{
    <table>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Price * item.Quantity)</td>
                <td>
                    <a href="@Url.Action("RemoveFromCart", "Cart", new { id = item.Id })">❌ Remove</a>
                </td>
            </tr>
        }
    </table>

    <a href="@Url.Action("ClearCart", "Cart")">🗑️ Clear Cart</a>
}
